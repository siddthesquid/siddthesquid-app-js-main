{
  "$schema": "node_modules/nx/schemas/nx-schema.json",
  "extends": "nx/presets/npm.json",
  "affected": {
    "defaultBase": "main"
  },
  "workspaceLayout": {
    "appsDir": "app",
    "libsDir": "lib"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "generate",
          "build",
          "test",
          "lint",
          "ci:generate",
          "ci:build",
          "ci:test",
          "ci:lint"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["generate", "^build"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "lint": {
      "dependsOn": ["build"]
    }
  }
}
