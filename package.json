{
  "name": "root",
  "private": true,
  "workspaces": [
    "app/*",
    "lib/*"
  ],
  "scripts": {
    "boot": "pnpm -r install",
    "clean": "nx run-many --target=clean",
    "clean:all": "nx run-many --parallel --target=clean:all",
    "dev": "nx run-many --parallel --target=dev",
    "build": "nx run-many --parallel --target=build",
    "test": "nx run-many --parallel --target=test",
    "lint": "nx run-many --parallel --target=lint",
    "publish": "nx run-many --parallel --target=publish"
  },
  "devDependencies": {
    "envinfo": "^7.8.1",
    "lerna": "6",
    "nx": "14.5.6"
  }
}
